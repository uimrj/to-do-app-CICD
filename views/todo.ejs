<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Todo List App</title>
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #74ebd5 0%, #9face6 100%);
            color: #333;
            margin: 0;
            padding: 0;
        }

        h1 {
            background: #4CAF50;
            color: white;
            margin: 0;
            padding: 20px;
            text-align: center;
            font-size: 2rem;
            letter-spacing: 1px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.2);
        }

        ul {
            list-style: none;
            padding: 20px;
            max-width: 600px;
            margin: auto;
        }

        ul li {
            background: #fff;
            border-radius: 8px;
            margin-bottom: 15px;
            padding: 15px 50px 15px 15px;
            position: relative;
            font-size: 1.1rem;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

        ul li:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 12px rgba(0,0,0,0.15);
        }

        .delete-btn, .edit-btn {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            border: none;
            background: none;
            cursor: pointer;
            font-size: 1.2rem;
            transition: color 0.2s;
        }

        .delete-btn {
            right: 10px;
            color: #e74c3c;
        }

        .delete-btn:hover {
            color: #c0392b;
        }

        .edit-btn {
            right: 45px;
            color: #f39c12;
        }

        .edit-btn:hover {
            color: #d35400;
        }

        form {
            background: #fff;
            padding: 20px;
            margin: 20px auto;
            max-width: 600px;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        }

        label {
            display: block;
            margin-bottom: 10px;
            font-weight: bold;
        }

        input[type="text"] {
            width: calc(100% - 120px);
            padding: 12px;
            margin-right: 10px;
            border: 1px solid #ddd;
            border-radius: 6px;
            font-size: 1rem;
        }

        input[type="submit"] {
            background-color: #4CAF50;
            color: white;
            border: none;
            padding: 12px 20px;
            border-radius: 6px;
            cursor: pointer;
            font-size: 1rem;
            transition: background 0.2s;
        }

        input[type="submit"]:hover {
            background-color: #45a049;
        }

        .icon {
            margin-right: 10px;
            color: #4CAF50;
        }
    </style>
</head>
<body>
    <h1><i class="fa-solid fa-list-check"></i> My Jenkins Learning Plan : </h1>

    <ul>
        <% todolist.forEach(function(todo, index) { %>
        <li>
            <a href="/todo/delete/<%= index %>" class="delete-btn"><i class="fa-solid fa-trash"></i></a>
            <a href="/todo/<%= index %>" class="edit-btn"><i class="fa-solid fa-pen-to-square"></i></a>
            <i class="fa-solid fa-circle-check icon"></i><%- todo %>
        </li>
        <% }); %>
    </ul>

    <form action="/todo/add/" method="post">
        <label for="newtodo"><i class="fa-solid fa-plus"></i> Add a new task:</label>
        <input type="text" name="newtodo" id="newtodo" placeholder="Type your task..." autofocus />
        <input type="submit" value="Add" />
    </form>
</body>
</html>
